<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- editText를 클릭했을 때 -->
    <item android:state_pressed="true" android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="#CED8F6" android:endColor="#ffffff"
                android:angle="270" />

            <stroke
                android:width="1dip" android:color="#819FF7"/>

            <corners android:radius="0dip"/>

            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>
    <!---->
    <!--editText에 focus잡혔을때-->
    <item android:state_focused="true" android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="#CED8F6" android:endColor="#ffffff"
                android:angle="270" />

            <stroke
                android:width="1dip" android:color="#819FF7"/>

            <corners android:radius="0dip"/>

            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>
    <!---->
    <!-- ?? -->
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="#FE642E" android:endColor="#898b75"
                android:angle="270" />

            <corners android:radius="5dip"/>

            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>
    <!---->
    <!-- editText에 focus 안잡혔을 때-->
    <item android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="#F2F2F2" android:endColor="#ffffff"
                android:angle="270" />

            <stroke
                android:width="0dip" android:color="#898b75"/>

            <corners android:radius="0dip"/>

            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>
    <!---->
</selector>